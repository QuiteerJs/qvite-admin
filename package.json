{
  "name": "Quasar",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "qvite dev",
    "dev:apps": "turbo run dev --parallel --filter='./apps/*'",
    "build": "qvite build",
    "build:apps": "turbo run build --parallel --filter='./apps/*'",
    "lint": "eslint --fix",
    "prepare": "simple-git-hooks",
    "commit": "qui gc"
  },
  "dependencies": {
    "@micro-zoe/micro-app": "catalog:",
    "@quiteer/naive-extra": "catalog:",
    "@quiteer/unocss": "catalog:",
    "@vueuse/core": "catalog:",
    "naive-ui": "catalog:",
    "pinia": "catalog:",
    "vue": "catalog:",
    "vue-router": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@iconify/vue": "catalog:",
    "@quiteer/scripts": "catalog:",
    "@quiteer/vite": "catalog:",
    "@types/node": "catalog:",
    "@unocss/eslint-plugin": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "simple-git-hooks": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "unplugin-vue-router": "catalog:"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm qui gv",
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
